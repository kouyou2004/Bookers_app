<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<% if @lists.present? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.title %></td>
          <td><%= list.body %></td>
          <td>
            <%= link_to "Show", "/lists/#{list.id}" %>  
            <%= link_to "Edit", edit_list_path(list.id) %> 
            <%= link_to "Destroy", destroy_list_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Title	Body</p>
<% end %>



<h1>New book</h1>
<!-- form_with部分 -->
<% if @list.errors.any? %>
  <%= @list.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list, url: '/lists', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  
	<h5></h5>
  <%= f.submit 'Create Book' %>
<% end %>

